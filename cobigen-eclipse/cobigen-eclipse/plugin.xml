<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
      <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.capgemini.cobigen.eclipseplugin.generate"
            name="Generate">
      </command>
      <command
            id="com.capgemini.cobigen.eclipseplugin.runCustomBatch"
            name="Run Custom Batch">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.capgemini.cobigen.eclipse.workbenchcontrol.handler.Generate"
            commandId="com.capgemini.cobigen.eclipseplugin.generate">
         <enabledWhen>
            <with
                  variable="com.capgemini.cobigen.eclipseplugin.variables.validInputPojos">
               <equals
                     value="true">
               </equals>
            </with></enabledWhen>
      </handler>
      <handler
            class="com.capgemini.cobigen.eclipse.workbenchcontrol.handler.RunCustomBatch"
            commandId="com.capgemini.cobigen.eclipseplugin.runCustomBatch">
         <enabledWhen>
            <with
                  variable="com.capgemini.cobigen.eclipseplugin.variables.validInputPojos">
               <equals
                     value="true">
               </equals>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <separator
               name="com.capgemini.cobigen.eclipseplugin.separator1"
               visible="true">
         </separator>
         <menu
               label="CobiGen">
            <command
                  commandId="com.capgemini.cobigen.eclipseplugin.generate"
                  label="Generate..."
                  style="push">
            </command>
         </menu>
         <separator
               name="com.capgemini.cobigen.eclipseplugin.separator2"
               visible="true">
         </separator>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu">
         <separator
               name="com.capgemini.cobigen.eclipseplugin.separator3"
               visible="true">
         </separator>
         <menu
               label="CobiGen">
            <command
                  commandId="com.capgemini.cobigen.eclipseplugin.generate"
                  label="Generate..."
                  style="push">
            </command>
         </menu>
         <separator
               name="com.capgemini.cobigen.eclipseplugin.separator4"
               visible="true">
         </separator>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="com.capgemini.cobigen.eclipse.workbenchcontrol.SourceProvider">
         <variable
               name="com.capgemini.cobigen.eclipseplugin.variables.validInputPojos"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>

</plugin>
