<templatesConfiguration xmlns="http://capgemini.com"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.0">
	<templates>
		<template id="resources_resources_spring_common" destinationPath="src/main/resources/resources/spring/common.xml"	templateFile="resources/resources/spring/common.ftl" />
    <template id="prefix_Foo2Class" templateFile="foo/Foo2Class.ftl" destinationPath="src/main/java/foo/Foo2Class${variable}.java" mergeStrategy="javaMerge"/>
	</templates>

  <template-scans>
    <template-scan templatePath="foo" templateIdPrefix="prefix_" destinationPath="src/main/java/foo"/>
  </template-scans>

	<increments>
		<increment id="gui_spring" description="Spring configuration">
			<templateRef idref="resources_resources_spring_common" />
		</increment>
		<increment id="gui" description="GUI">
			<incrementRef idref="gui_spring" />
		</increment>
	</increments>
</templatesConfiguration>
