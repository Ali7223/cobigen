<?xml version="1.0" encoding="UTF-8"?>
<contextConfiguration xmlns="http://capgemini.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.0">
  <triggers>
    <trigger id="entities" type="java" templateFolder="testTemplates">
      <containerMatcher type="package" value="(.+\.)?\.testdata"/>
      <matcher type="fqn" value="((.+\.)?)\.testdata\.([^\.]+)Entity">
        <variableAssignment type="regex" key="rootPackage" value="1"/>
        <variableAssignment type="regex" key="entityName" value="3"/>
      </matcher>
    </trigger>
    <trigger id="entities2" type="java" templateFolder="testTemplates">
      <containerMatcher type="package" value="(.+\.)?\.testdata"/>
      <matcher type="fqn" value="((.+\.)?)\.testdata\.([^\.]+)Entity">
        <variableAssignment type="regex" key="rootPackage" value="1"/>
        <variableAssignment type="regex" key="entityName" value="3"/>
      </matcher>
    </trigger>
  </triggers>
</contextConfiguration>
