<?xml version="1.0" encoding="UTF-8"?>
<!-- This file is for logback classic. The file contains the configuration 
	for sl4j logging -->
<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- defines the level of logging -->
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>DEBUG</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
			</Pattern>
		</layout>
	</appender>

	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<!-- defines the level of logging -->
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>DEBUG</level> 
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<file>CobiGen.log</file> 
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%n%date %d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n
			</Pattern>
		</layout> 
	</appender>

	<root level="DEBUG">
	<!-- for appending output to the file -->
		<!-- <appender-ref ref="FILE" />-->
		<!-- <appender-ref ref="STDOUT" />-->
	</root>
</configuration>